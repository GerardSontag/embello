\ install hardware abstractions in flash

\ cr eraseflash
compiletoflash

7 constant io-ports  \ A..G

include ../mlib/hexdump.fs
include ../flib/stm32f4/io.fs
include ../flib/stm32f4/hal.fs
\ include ../flib/stm32f4/adc.fs
\ include ../flib/any/ring.fs
\ include ../flib/stm32f4/uart2.fs
\ include ../flib/stm32f4/uart2-irq.fs
\ include ../flib/stm32f4/spi.fs

\ board definitions for Haoyu HY-STM32Core144, i.e. "Core Board Four"

\ PA4 variable ssel  \ can be changed at run time
\ PA5 constant SCLK
\ PA6 constant MISO
\ PA7 constant MOSI
include ../flib/any/spi-bb.fs

\ PB6 constant SCL
\ PB7 constant SDA
include ../flib/any/i2c-bb.fs

PF6 constant LED

: init ( -- )  \ board initialisation
\ -jtag  \ disable JTAG, we only need SWD
  OMODE-PP LED io-mode!
  168MHz
  flash-kb . ." KB <cbf> " hwid hex. ." ok." cr
  1000 systick-hz
;

