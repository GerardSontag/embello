\ install hardware abstractions in flash

cr eraseflash
compiletoflash

include ../flib/io-stm32f1.fs
include ../flib/hal-stm32f1.fs
include ../flib/hexdump.fs

\ board definitions for Hy-TinySTM103T

PA1 constant LED

PA4 variable (ssel)  \ this can be changed at run time
: SSEL (ssel) @  inline ;

PA5 constant SCLK
PA6 constant MISO
PA7 constant MOSI

PB6 constant SCL
PB7 constant SDA

: init ( -- )  \ board initialisation
  -jtag  \ disable JTAG, we only need SWD
  LED OMODE-PP io-mode!
  72MHz
\ 1000 systick-hz
;

cornerstone {hal-rnw}
compiletoram
init

\ vim: set ft=forth :
